<Window x:Class="LabWork4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabWork4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
     
        <StackPanel>
            <DataGrid x:Name="DataGrid" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер фильма" Binding="{Binding FilmId}"/>
                    <DataGridTextColumn Header="Фильм" Binding="{Binding FilmName}"/>
                    <DataGridTextColumn Header="Возрастной рейтинг" Binding="{Binding AgeRating}"/>
                    <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}"/>
                    <DataGridTextColumn Header="Жанр" Binding="{Binding GenreName}"/>
                </DataGrid.Columns>

            </DataGrid>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="5">
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center" Content="Обновить" Height="20" x:Name="UpdateButton" Width="200" Margin="5" Click="UpdateButton_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5">
            <Label Height="26" Width="200" Content="Номер фильма"/>
            <TextBox x:Name="DeleteTextBox" Margin="5"/>
            <Button Content="Удалить" Height="20" Width="200" x:Name="DeleteButton" Margin="5" Click="DeleteButton_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <Label Content="Добавление фильма" Margin="5"/>
            <TextBox x:Name="FilmTextBox" Height="20" Width="200"/>
            <Label Width="200" Height="26" Content="Жанр"/>
            <ComboBox x:Name="GenreComboBox" Margin="5">
                <TextBlock>Комедия</TextBlock>
                <TextBlock>Боевик</TextBlock>
                <TextBlock>Ужасы</TextBlock>
                <TextBlock>Романтика</TextBlock>
                <TextBlock>Фантастика</TextBlock>
            </ComboBox>
            <Label Width="200" Height="26" Content="Возврастной рейтинг"/>
            <ComboBox x:Name="AgeRatingComboBox" Margin="5">
                <TextBlock>18+</TextBlock>
                <TextBlock>16+</TextBlock>
                <TextBlock>0+</TextBlock>
                <TextBlock>6+</TextBlock>
                <TextBlock>12+</TextBlock>
            </ComboBox>
            <Label Width="200" Height="26" Content="Рейтинг" Margin="5"/>
            <TextBox Width="200" Height="20" Margin="5" x:Name="RatingTextBox"/>
            <Button Content="Добавить" Height="20" x:Name="FilmAddButton" Width="200" Click="FilmAddButton_Click" Margin="10"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
